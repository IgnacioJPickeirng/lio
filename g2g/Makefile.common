# -*- mode: make -*-
ifeq ($(gcc),1)
  CXXFLAGS:=$(CXXFLAGS) $(EXTRA_FLAGS) -Wall -Wno-long-long -ansi -Wno-unused
else
  CXXFLAGS:=$(CXXFLAGS) $(EXTRA_FLAGS)
endif

%.o:%.cpp %.h
	$(CXX) $(CXXFLAGS) -c $< -o $@
  
%.o:%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@
  
%.o:%.c %.h
	$(CC) $(CFLAGS) -c $< -o $@
